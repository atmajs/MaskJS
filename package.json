{
    "name": "maskjs",
    "description": "Template / Markup / HMVC Engine",
    "version": "0.71.33",
    "homepage": "http://atmajs.com/mask",
    "contributors": [
        {
            "name": "Kiryl Yermakou",
            "email": "rma4ok@gmail.com"
        }
    ],
    "main": "./lib/mask.node.js",
    "mainBrowser": "./lib/mask.js",
    "types": "./lib/mask.d.ts",
    "author": "Alexander Kit <alex.kit@atmajs.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/MaskJS.git"
    },
    "bugs": {
        "url": "https://github.com/atmajs/MaskJS/issues"
    },
    "licenses": [
        "MIT"
    ],
    "dependencies": {},
    "devDependencies": {
        "@types/jquery": "^3.3.22",
        "@types/sinon": "^7.0.5",
        "app-bundler": "0.0.68",
        "atma": "^0.12.12",
        "atma-io-middleware-condcomments": "^1.2.8",
        "atma-io-middleware-importer": "^1.1.37",
        "atma-io-middleware-uglify": "^1.1.21",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3",
        "jsdoc-to-markdown": "git+https://github.com/tenbits/jsdoc-to-markdown"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler",
        "watch": "app-bundler --watch",
        "build-dev": "app-bundler --inspect-brk",
        "release": "atma bump && npm run build && atma release",
        "server": "atma server --TEST",
        "examples": "atma server --TEST",
        "tsc": "tsc -p tsconfig-build.json",
        "dts": "npm run tsc && atma run tools/build-dts"
    },
    "keywords": [],
    "atma": {
        "release": [
            "lib/**",
            "wiki/**",
            "typings/**",
            "readme.md",
            "package.json",
            "bower.json"
        ],
        "plugins": [
            "atma-io-middleware-condcomments",
            "atma-io-middleware-uglify",
            "atma-loader-ts"
        ],
        "settings": {
            "atma-utest": {
                "include": {
                    "amd": true
                }
            },
            "io": {
                "extensions": {
                    "js": [
                        "atma-io-middleware-condcomments:read",
                        "atma-io-middleware-importer:read"
                    ],
                    "ts": [
                        "atma-io-middleware-condcomments:read",
                        "atma-io-middleware-importer:read",
                        "atma-loader-ts:read"
                    ]
                }
            },
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                },
                "routes": {
                    "@utils": "/ref-utils/src/{0}",
                    "@core": "/src/{0}",
                    "@compo": "/projects/mask-compo/src/{0}",
                    "@mask-j": "/projects/mask-j/src/jmask/{0}",
                    "@binding": "/projects/mask-binding/src/{0}",
                    "@project": "/projects/{0}"
                },
                "lazy": {
                    "/custom/*": [
                        "modules/exports",
                        "expression/src/exports"
                    ],
                    "/builder/*": [
                        "src/util/compo",
                        "src/feature/"
                    ],
                    "/renderer/*": [
                        "compo/exports"
                    ],
                    "/mask-compo/*": [
                        "util/reporters",
                        "parser/exports",
                        "builder/exports",
                        "expression/src/exports",
                        "renderer/exports",
                        "parser/exports",
                        "/feature/"
                    ],
                    "/expression/*": [
                        "projects/observer"
                    ],
                    "CompoStatics\\b": [
                        "Component"
                    ]
                }
            },
            "atma-io-middleware-uglify": {},
            "atma-io-middleware-importer": {},
            "atma-io-middleware-condcomments": {
                "defines": {
                    "BROWSER": true
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "test",
                    "ts"
                ],
                "typescript": {
                    "compilerOptions": {
                        "baseUrl": "./",
                        "paths": {
                            "@core/*": [
                                "src/*"
                            ],
                            "@utils/*": [
                                "ref-utils/src/*"
                            ],
                            "@mask-j/*": [
                                "projects/mask-j/src/jmask/*"
                            ],
                            "@compo/*": [
                                "projects/mask-compo/src/*"
                            ],
                            "@binding/*": [
                                "projects/mask-binding/src/*"
                            ],
                            "@project/*": [
                                "projects/*"
                            ]
                        },
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "esnext"
                        },
                        "sourceMap": false
                    }
                }
            }
        }
    },
    "app-bundler": {
        "config": "package.yml"
    }
}
