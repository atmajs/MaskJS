UTest({
	'should parse name' () {
		var ast = jmask(`
			define Foo {
				h4 > 'Hello'
			}
		`);
		var def = ast.filter('define').get(0);
		eq_(def.name, 'Foo');
	},
	'should parse extends' () {
		var ast = Mask.parse(`
			define
				Foo
					extends Baz, $qu_x {
						h4 > 'Hello'
					}
		`);
		var def = jmask(ast).filter('define').get(0);
		eq_(def.name, 'Foo');
		deepEq_(def.extends, [
			{ compo: 'Baz'  },
			{ compo: '$qu_x'}
		]);

		var back = Mask.stringify(ast, 4);
		has_(back, 'define Foo extends Baz, $qu_x {');
	},
	'should parse mask head in "as" ' () {
		var ast = Mask.parse(`
			define
				Foo
					as ( .some data-id='name') {
						h4 > 'Hello'
					}
		`);
		var def = jmask(ast).filter('define').get(0);
		eq_(def.name, 'Foo');
		eq_(def.as, " .some data-id='name'");

		var back = Mask.stringify(ast, 4);
		has_(back, `define Foo as ( .some data-id='name') {`);
	},
	'should parse arguments ' () {
		var ast = Mask.parse(`
			define Foo (
						foo, $scope.qu_x ) {
				h4 > 'Hello'
			}
		`);
		var def = jmask(ast).filter('define').get(0);
		deepEq_(def.arguments, [ { prop: 'foo'}, { prop: '$scope.qu_x'} ]);

		var back = Mask.stringify(ast, 4);
		has_(back, "define Foo (foo, $scope.qu_x)");		
	},
	'should parse arguments and extends' () {
		Mask.on('error', assert.avoid());
		var ast = Mask.parse(`
			define Foo (a, b) extends Bar {
				span > 'Hello'
			}
		`);
		var def = jmask(ast).filter('define').get(0);
		deepEq_(def.arguments, [ { prop: 'a'}, { prop: 'b'} ]);
		deepEq_(def.extends, [ { compo:'Bar' } ]);
		Mask.off('error');
	},
	'should parse arguments, extends and as' () {
		Mask.on('error', assert.avoid());
		var ast = Mask.parse(`
			define Foo (a,   b ) as (div) extends Xy, Bar {
				span > 'Hello'
			}
		`);
		var def = jmask(ast).filter('define').get(0);
		deepEq_(def.arguments, [ { prop: 'a'}, { prop: 'b'} ]);
		deepEq_(def.extends, [ { compo:'Xy' }, { compo:'Bar' } ]);
		deepEq_(def.as, 'div');
		Mask.off('error');

		var back = Mask.stringify(ast, 4);
		has_(back, "define Foo (a, b) as (div) extends Xy, Bar {");
	}
})

