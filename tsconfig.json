{
    "exclude": [
        "node_modules",
        "ts_temp"
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "@core/*": [
                "src/*"
            ],
            "@utils/*": [
                "ref-utils/src/*"
            ],
            "@mask-j/*": [
                "projects/mask-j/src/jmask/*"
            ],
            "@compo/*": [
                "projects/mask-compo/src/*"
            ],
            "@binding/*": [
                "projects/mask-binding/src/*"
            ],
            "@project/*": [
                "projects/*"
            ],
            "@mask-node/*": [
                "projects/mask-node/src/*"
            ]
        },
        "module": "es2022"
    }
}
