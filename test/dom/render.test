var render = mask.render.bind(mask),
	template, node, attr;

UTest({
	'should render classNames' () {
		var dom = mask.render(`
			div { div .test }
			section
				.foo;
			span > i class='baz';
			b > span > em.baz;
		`);
		return UTest.domtest(dom, `
			find ('.test') > length 1;
			find ('.baz') > length 2;
			filter ('.foo') > length 1;
		`);
	},
	'should insert model values' () {
		var div = mask.render('#~[id].~[klass] data-type="~[type]" > "~[name]"', {
			name: 'NAME',
			id: 'ID',
			klass: 'CLASS',
			type: 'TYPE'
		});

		return UTest.domtest(div, `
			prop tagName DIV;
			attr id ID;
			attr class CLASS;
			attr data-type TYPE;
			text NAME;
		`);
	},
	'should interpolate text node' () {
		var frag = mask.render('"~[name]~[id] i ~[klass]am~[type]end"', {
			name: 'NAME',
			id: 'ID',
			klass: 'CLASS',
			type: 'TYPE'
		});
		eq_(frag.textContent, 'NAMEID i CLASSamTYPEend');
	},
	'interpolation with ternary operator' () {
		var div = mask.render('.~[ enabled ? "enabled" : "disabled"]', {
			enabled: true
		});

		$(div).eq_('hasClass', 'enabled', true);
	},

	'should render with children': function(){
		var dom = mask.render('.~[ enabled ?"enabled" ] { .item; .item; .item > "Last" }', {
			enabled: true
		});

		return UTest.domtest(dom, `
			prop tagName DIV;
			attr class enabled;
			find ('.item') {
				length 3;

				eq (2) {
					text ('Last');
				}
			}
		`);
	},

	'scoped variables': function(){
		var dom = mask.render('"~[a] ~[b.sub]"', {}, {}, null, {
			scope: {
				a: 'a'
			},
			parent: {
				scope: { b: { sub: 'sub!' } }
			}
		});

		eq(dom.textContent, 'a sub!');
	},
	'expressions': function(){
		var dom = render('"~[a] ~[: b[\'sub\'] ]"', {
			a: 'A',
			b: { sub: 'Sub!'}
		});
		eq_(dom.textContent, 'A Sub!');
	}
});

