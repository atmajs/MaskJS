	'extractVars': function(){
		eq($refs('x'),'x');
		deepEq($refs('x + fn(a.b.c)'),['x','a.b.c']);
		deepEq($refs('(var * var2 / (1 - same)) + object.fn(a.b.c)'),['var','var2', 'same','a.b.c','object']);
		
		
		var obj = {
			fn: function(){
				return {
					model: 'yeap'
