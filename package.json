{
  "name": "maskjs",
  "description": "Template / Markup / HMVC Engine",
  "version": "0.65.2",
  "homepage": "http://atmajs.com/mask",
  "contributors": [
    {
      "name": "Kiryl Yermakou",
      "email": "rma4ok@gmail.com"
    }
  ],
  "main": "./lib/mask.node.js",
  "author": "Alexander Kit <alex.kit@atmajs.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/atmajs/MaskJS.git"
  },
  "bugs": {
    "url": "https://github.com/atmajs/MaskJS/issues"
  },
  "licenses": [
    "MIT"
  ],
  "devDependencies": {
    "app-bundler": "0.0.63",
    "atma": "^0.11.14",
    "atma-io-middleware-condcomments": "^1.2.6",
    "atma-io-middleware-importer": "^1.1.37",
    "atma-io-middleware-uglify": "^1.1.21",
    "atma-loader-babel": "^1.1.26",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-preset-es2015": "^6.18.0",
    "jsdoc-to-markdown": "git+https://github.com/tenbits/jsdoc-to-markdown"
  },
  "scripts": {
    "test": "atma test",
    "build": "app-bundler",
    "watch": "app-bundler --watch",
    "build-dev": "app-bundler --inspect-brk",
    "release": "atma release",
    "server": "atma server",
    "examples": "atma server"
  },
  "keywords": [],
  "atma": {
    "release": [
      "lib/**",
      "wiki/**",
      "typings/**",
      "readme.md",
      "package.json",
      "bower.json"
    ],
    "plugins": [
      "atma-loader-babel",
      "atma-io-middleware-condcomments",
      "atma-io-middleware-uglify",
      "atma-loader-ts"
    ],
    "settings": {
      "io": {
        "extensions": {
          "js": [
            "atma-io-middleware-condcomments:read",
            "atma-io-middleware-importer:read"
          ],
          "ts": [
            "atma-io-middleware-condcomments:read",
            "atma-io-middleware-importer:read",
            "atma-loader-ts:read"
          ]
        }
      },
      "include": {
        "amd": true,
        "extentionDefault": {
          "js": "ts"
        },
        "routes": {
          "@utils": "/ref-utils/src/{0}",
          "@core": "/src/{0}",
          "@compo": "/projects/mask-compo/src/{0}",
          "@mask-j": "/projects/mask-j/src/jmask/{0}"
        }
      },
      "atma-loader-babel": {
        "extensions": [
          "es6",
          "test"
        ],
        "babel": {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "async-to-promises"
          ]
        }
      },
      "atma-io-middleware-uglify": {},
      "atma-io-middleware-importer": {},
      "atma-io-middleware-condcomments": {
        "defines": {
          "BROWSER": true
        }
      },
      "atma-loader-ts": {
        "extensions": [
            "test",
            "ts"
        ],        
        "typescript": {
            
          "compilerOptions": {
            "baseUrl": "./",
            "paths": {
              "@core/*": [
                "src/*"
              ],
              "@utils/*": [
                "ref-utils/src/*"
              ],
              "@mask-j/*": [
                "projects/mask-j/src/jmask/*"
              ],
              "@compo/*": [
                "projects/mask-compo/src/*"
              ],
              "@binding/*": [
                "projects/mask-binding/src/*"
              ]
            },
            "#if (TEST)": {
                "module": "AMD"
            },
            "#if (!TEST)": {
                "module": "esnext"
            },
            "sourceMap": false
          }
        }
      }
    }
  },
  "dependencies": {
    "@types/jquery": "^3.3.22"
  },
  "app-bundler": {
    "apps": {
      "browser-default": {
        "outputMain": "lib/mask.js",
        "package": {
          "moduleWrapperCustomPath": "./src/umd-wrapper.js"
        },
        "settings": {
          "atma-io-middleware-condcomments": {
            "defines": {
              "BROWSER": true
            }
          }
        },
        "copyFiles": {
          "src/auto-reload.ts": "lib/plugin.reload.js"
        }
      }
    },
    "common": {
      "file1": "projects/mask-compo/src/DomLite.ts",
      "file": "src/mask.ts",
      "package": {
        "module": "import",
        "moduleWrapper": "custom"
      },
      "dynamicDependencies": [
        "^vm$",
        "^fs$",
        "^module$",
        "^path$"
      ],
      "extensions": {
        "io": {
          "type": "js"
        }
      },
      "defaultExtensions": {
        "js": "ts"
      },
      "middlewares": {
        "js": [
          "atma-io-middleware-condcomments:read",
          "atma-io-middleware-importer:read"
        ],
        "ts": [
          "atma-io-middleware-condcomments:read",
          "atma-io-middleware-importer:read",
          "atma-loader-ts:read"
        ]
      },
      "options": {
        "include": {
          "routes": {
            "@core": "src/{0}",
            "@utils": "ref-utils/src/{0}",
            "@mask-j": "projects/mask-j/src/jmask/{0}",
            "@compo": "projects/mask-compo/src/{0}",
            "@binding": "projects/mask-binding/src/{0}"
          }
        }
      }
    }
  }
}
